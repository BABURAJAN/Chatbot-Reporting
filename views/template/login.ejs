<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-info text-center" >
                    <div class="panel-heading" style="background-color:#72abc7;">
						<!-- <img src="/images/logo.png" style="width: 16%; margin-left: -10%;margin-top:-10px"/> -->
						<span style="font-size: 22px; color:#fff;">Bot Report</span>
                    </div>
                    <div class="panel-body">
                         <form id="aform" role="form" action="/gotologin" method="post">
                            <fieldset>
                                <% if ( message ) { %>
                                    <div class="flash"><%= message %></div>
                                <% } %>
                                <div class="form-group">
                                    <input class="form-control" placeholder="User Name" name="username" type="" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <!--<div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>-->
                                <!-- Change this to a button or input when using this as a form -->
                                <a href="#"  onclick="login();" class="btn btn-lg btn-success btn-block" style="    background-color:#72abc7;">Login</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
				<!-- <p class="login-powered text-center"> <span class="powered-by">Powered by</span> <span class="powered-by niit-mts">NIIT EASE</span> <span class="powered-by">Platform</span></p> -->
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="/metisMenu/dist/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="/dist/js/sb-admin-2.js"></script>

    <script>
	
		// Submit form on Enter Key Press Event.
		$(document).ready(function(){
			localStorage.setItem("userName", "")
			$('.form-control').keypress(function (e) {
			  if (e.which == 13) {
				$('#aform').submit();
				return false; 
			  }
			});
		});
	
        function login(){
		console.log(":::::::::::::::login function invoked in login.ejs ::::::::::::");
            document.forms["aform"].submit();     
console.log("---------------------/gotologin  post request send to server----------------------------");			
		
            localStorage.setItem("userName", $('input[placeholder="User Name"]').val())
        }
    </script>
</body>

</html>
